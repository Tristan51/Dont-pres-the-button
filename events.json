{
  "events": [
    {
      "condition": "pressCount === 1",
      "message": "FIRST PRESS DETECTED!",
      "action": "document.body.style.backgroundColor = '#FFEEEE'"
    },
    {
      "condition": "pressCount === 2",
      "message": "SYSTEM PROBING...",
      "action": "document.getElementById('button').style.border = '8px double #FF0000'"
    },
    {
      "condition": "pressCount >= 10 && pressCount % 10 === 0",
      "message": "MILESTONE: ${pressCount} PRESSES!",
      "action": "document.getElementById('button').style.transform = 'scale(${1 + pressCount/50})'"
    }
  ]
}
