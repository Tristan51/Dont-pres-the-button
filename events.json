{
  "events": [
    {
      "condition": "pressCount === 1",
      "message": "SYSTEM ALERT: First press detected",
      "action": "document.body.style.backgroundColor = '#FFEEEE'"
    },
    {
      "condition": "pressCount === 2",
      "message": "WARNING: Unauthorized activity",
      "action": "document.getElementById('button').style.border = '8px double red'"
    },
    {
      "condition": "pressCount === 3",
      "message": "CRITICAL: System overload",
      "action": "document.getElementById('message').style.animation = 'blink 0.5s infinite'"
    },
    {
      "condition": "pressCount === 5",
      "message": "EMERGENCY: Containment breach",
      "action": "document.body.style.backgroundImage = 'linear-gradient(red, yellow)'"
    },
    {
      "condition": "pressCount === 10",
      "message": "CATASTROPHIC FAILURE IMMINENT",
      "action": "document.body.classList.add('screen-shake'); setTimeout(() => document.body.classList.remove('screen-shake'), 1000)"
    }
  ]
}
