{
  "events": [
    {
      "message": "SYSTEM MALFUNCTION",
      "condition": "pressCount >= 1",
      "action": "document.body.style.backgroundColor = '#ffe0e0'"
    },
    {
      "message": "CRITICAL OVERHEAT",
      "condition": "pressCount >= 5",
      "action": "button.style.transform = 'rotate(5deg)'"
    },
    {
      "message": "CORE BREACH IMMINENT",
      "condition": "pressCount >= 10",
      "action": "button.style.transform = 'skew(20deg, 20deg)'; button.style.animation = 'wonky 0.5s infinite'"
    }
  ]
}
