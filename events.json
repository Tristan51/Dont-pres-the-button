{
  "events": [
    {
      "condition": "pressCount === 10",
      "message": "RELEASE THE KRAKEN!",
      "action": [
        "document.body.classList.add('screen-shake', 'color-cycle')",
        "document.getElementById('button').style.transform = 'scale(2)'"
      ]
    },
    {
      "condition": "pressCount === 20",
      "message": "MATRIX BREACHED",
      "action": [
        "document.body.style.backgroundImage = 'repeating-linear-gradient(45deg, #0f0, #0f0 10px, #000 10px, #000 20px)'",
        "document.getElementById('message').classList.add('matrix-fall')"
      ]
    },
    {
      "condition": "pressCount === 30",
      "message": "TIME VORTEX ACTIVATED",
      "action": [
        "document.body.style.animation = 'vortex 2s infinite'",
        "document.getElementById('button').style.animation = 'hyperspace 1s infinite'"
      ]
    },
    {
      "condition": "pressCount % 10 === 0 && pressCount > 0",
      "message": "MILESTONE REACHED: ${pressCount}",
      "action": [
        "document.body.classList.toggle('alt-dimension')",
        "new Audio('https://assets.mixkit.co/sfx/preview/mixkit-arcade-game-jump-coin-216.mp3').play()"
      ]
    },
    {
      "condition": "pressCount % 5 === 0",
      "action": [
        "document.getElementById('button').style.boxShadow = '0 0 ${pressCount}px rgba(255,0,0,0.5)'"
      ]
    }
  ]
}
