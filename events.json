{
  "events": [
    {
      "condition": "pressCount === 1",
      "message": "FIRST PRESS DETECTED",
      "action": "document.body.style.backgroundColor = '#FFEEEE'"
    },
    {
      "condition": "pressCount === 2",
      "message": "SYSTEM PROBING",
      "action": "document.getElementById('button').style.border = '8px double #FF0000'"
    },
    {
      "condition": "pressCount === 3",
      "message": "WARNING SIGNS",
      "action": "document.getElementById('message').style.textDecoration = 'blink'"
    },
    {
      "condition": "pressCount === 5",
      "message": "MINOR GLITCHES",
      "action": "document.getElementById('button').style.transform = 'rotate(5deg)'"
    },
    {
      "condition": "pressCount % 5 === 0 && pressCount <= 50",
      "message": "PHASE ${Math.floor(pressCount/5)} INITIATED",
      "action": "document.getElementById('button').style.boxShadow = '0 0 ${pressCount}px rgba(255,0,0,0.5)'"
    },
    {
      "condition": "pressCount === 10",
      "message": "RELEASE THE KRAKEN!",
      "action": "document.body.classList.add('screen-shake'); setTimeout(() => document.body.classList.remove('screen-shake'), 1000); document.getElementById('button').style.transform = 'scale(1.5)'"
    },
    {
      "condition": "pressCount === 20",
      "message": "MATRIX BREACHED",
      "action": "document.body.style.background = 'repeating-linear-gradient(45deg, #0f0, #0f0 10px, #000 10px, #000 20px)'; document.getElementById('message').style.animation = 'matrix-fall 5s infinite'"
    },
    {
      "condition": "pressCount === 30",
      "message": "TIME VORTEX",
      "action": "document.body.style.animation = 'vortex 2s infinite'; document.getElementById('button').style.animation = 'hyperspace 1s infinite'"
    },
    {
      "condition": "pressCount === 40",
      "message": "QUANTUM ENTANGLEMENT",
      "action": "document.getElementById('button').style.display = 'none'; setTimeout(() => document.getElementById('button').style.display = 'block', 500)"
    },
    {
      "condition": "pressCount === 50",
      "message": "SINGULARITY REACHED",
      "action": "document.body.style.transform = 'scale(0.5)'; document.body.style.filter = 'hue-rotate(180deg)'"
    },
    {
      "condition": "pressCount === 66",
      "message": "DEVIL'S PLAYGROUND",
      "action": "document.body.style.filter = 'invert(1)'; document.getElementById('button').style.transform = 'rotate(666deg)'"
    },
    {
      "condition": "pressCount === 100",
      "message": "FINAL BOSS ACTIVATED",
      "action": "document.body.innerHTML = '<h1 style=\"color:red;font-size:5em\">YOU WIN...?</h1>'; new Audio('https://assets.mixkit.co/sfx/preview/mixkit-game-level-completed-2059.mp3').play()"
    },
    {
      "condition": "pressCount > 100",
      "message": "BEYOND LIMITS (${pressCount})",
      "action": "document.body.style.background = 'repeating-radial-gradient(circle, hsl(${pressCount % 360}, 100%, 50%), black'; document.getElementById('button').style.borderRadius = '${pressCount % 100}px'"
    }
  ]
}
